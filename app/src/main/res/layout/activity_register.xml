<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/frameRegister"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/groupStylewhite_A700"
        android:background="@color/white_A700">

        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/linearColumndaftarvircle"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_19pxh"
            android:layout_marginStart="@dimen/_19pxh"
            android:layout_marginTop="@dimen/_70pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtDaftarVirCle"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12pxh"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_daftar_vircle"
                style="@style/txtHappyMonkeyregular24" tools:text="@string/lbl_daftar_vircle"/>

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/txtMembuatthread"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="match_parent"
                android:text="@string/msg_membuat_thread"
                style="@style/txtHappyMonkeyregular15"
                tools:text="@string/msg_membuat_thread"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15pxh"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/InputNameregister"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="@dimen/_10pxh"
                    app:boxCornerRadiusBottomEnd="@dimen/_10pxh"
                    app:boxCornerRadiusBottomStart="@dimen/_10pxh"
                    app:boxCornerRadiusTopEnd="@dimen/_10pxh">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/usernameRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:hint="@string/lbl_username"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_12pxh"
                        android:paddingTop="@dimen/_6pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_7pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_700"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15pxh"
                android:id="@+id/InputEmailregister"
                android:layout_gravity="center_horizontal"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="@dimen/_10pxh"
                app:boxCornerRadiusBottomEnd="@dimen/_10pxh"
                app:boxCornerRadiusBottomStart="@dimen/_10pxh"
                app:boxCornerRadiusTopEnd="@dimen/_10pxh">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/img_vector"
                    android:drawablePadding="@dimen/_19pxh"
                    android:hint="@string/lbl_email"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:paddingStart="@dimen/_12pxh"
                    android:paddingTop="@dimen/_6pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_7pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_701"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15pxh"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/inputPasswordRegister"
                android:layout_gravity="center_horizontal"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:passwordToggleEnabled="true"
                app:boxCornerRadiusTopStart="@dimen/_10pxh"
                app:boxCornerRadiusBottomEnd="@dimen/_10pxh"
                app:boxCornerRadiusBottomStart="@dimen/_10pxh"
                app:boxCornerRadiusTopEnd="@dimen/_10pxh">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:drawableStart="@drawable/img_lock"
                    android:drawablePadding="@dimen/_19pxh"
                    android:hint="@string/lbl_password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_12pxh"
                    android:paddingTop="@dimen/_6pxv"
                    android:paddingEnd="@dimen/_20pxh"
                    android:paddingBottom="@dimen/_7pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_701" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputConfiPasswordRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15pxh"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:passwordToggleEnabled="true"
                app:boxCornerRadiusTopStart="@dimen/_10pxh"
                app:boxCornerRadiusBottomEnd="@dimen/_10pxh"
                app:boxCornerRadiusBottomStart="@dimen/_10pxh"
                app:boxCornerRadiusTopEnd="@dimen/_10pxh">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/KonfirmasiPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:drawableStart="@drawable/img_lock"
                    android:drawablePadding="@dimen/_19pxh"
                    android:hint="@string/lbl_konfirmasipassword"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_12pxh"
                    android:paddingTop="@dimen/_6pxv"
                    android:paddingEnd="@dimen/_20pxh"
                    android:paddingBottom="@dimen/_7pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_701" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnDaftar"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12pxh"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_40pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_11pxv"
                android:singleLine="true"
                android:text="@string/lbl_daftar"
                android:textAllCaps="false"
                style="@style/btnSolidRounded" tools:text="@string/lbl_daftar"/>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearRowlanguage"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12pxh"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_width="match_parent" android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLanguage"
                    style="@style/txtHappyMonkeyregular16_1"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:ellipsize="end"
                    android:paddingStart="@dimen/_60pxh"
                    android:singleLine="true"
                    android:text="@string/msg_sudah_punya_aku"
                    tools:text="@string/msg_sudah_punya_aku" />
                 <TextView
                     android:id="@+id/txtMasuk"
                     style="@style/txtHappyMonkeyregular16_2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.25"
                     android:layout_marginStart="@dimen/_10pxh"
                     android:ellipsize="end"
                     android:singleLine="true"
                     android:text="@string/lbl_masuk"
                     android:textColor="#0277BD"
                     tools:text="@string/lbl_masuk" />
            </LinearLayout>
                <TextView android:gravity="center_horizontal"
                    android:id="@+id/txtDenganmelanjut"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_11pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_100pxv"
                    android:layout_width="match_parent"
                    android:text="@string/msg_dengan_melanjut"
                    style="@style/txtIcelandregular16" tools:text="@string/msg_dengan_melanjut"/>
            </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>